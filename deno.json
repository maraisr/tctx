{
	"version": "0.2.1",
	"name": "@mr/tracecontext",
	"exports": {
		".": "./mod.ts",
		"./traceparent": "./traceparent.ts",
		"./tracestate": "./tracestate.ts"
	},
	"tasks": {
		"build": "deno run -A scripts/build.ts"
	},
	"imports": {
		"@deno/dnt": "jsr:@deno/dnt@^0.41.1",
		"@std/assert": "jsr:@std/assert@^0.221.0"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-var",
				"prefer-const",
				"no-cond-assign",
				"no-inner-declarations"
			]
		}
	},
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"exclude": [
		"npm",
		"cargo",
		"validation/w3c"
	],
	"publish": {
		"include": [
			"*.ts",
			"license",
			"readme.md"
		],
		"exclude": [
			"*.test.ts"
		]
	}
}
