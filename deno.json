{
	"version": "0.2.4",
	"license": "MIT",
	"name": "@mr/tracecontext",
	"exports": {
		"./traceparent": "./lib/traceparent.ts",
		"./tracestate": "./lib/tracestate.ts"
	},
	"tasks": {
		"build": "deno run -A scripts/build.ts"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^1",
		"@std/path": "jsr:@std/path@^1",
		"@lukeed/csprng": "npm:@lukeed/csprng@^1"
	},
	"lock": false,
	"lint": {
		"rules": {
			"exclude": [
				"no-var",
				"prefer-const",
				"no-cond-assign",
				"no-inner-declarations"
			]
		}
	},
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"exclude": [
		"npm",
		"cargo",
		"validation/w3c"
	],
	"publish": {
		"include": [
			"lib/*.ts",
			"license",
			"readme.md"
		],
		"exclude": [
			"**/*.test.ts",
			"**/*.bench.ts"
		]
	}
}
